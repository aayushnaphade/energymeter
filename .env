# PostgreSQL Configuration
POSTGRES_DB=thingsboard
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# Kafka Configuration
KAFKA_PORT=9092
KAFKA_LOG_RETENTION_MS=300000
KAFKA_SEGMENT_BYTES=26214400

# ThingsBoard Configuration
TB_VERSION=4.2.1
TB_SERVICE_ID=tb-ce-node
TB_HTTP_PORT=8080
TB_EDGE_RPC_PORT=7070
TB_MQTT_PORT=1883
TB_MQTT_SSL_PORT=8883
TB_COAP_PORT_RANGE=5683-5688

# Logging Configuration
LOG_MAX_SIZE=100m
LOG_MAX_FILE=10

# System Requirements
# Minimum RAM: 4GB (8GB recommended)
# Disk Space: 10GB+ recommended for data and logs

# Auto-Initialization Settings
# Set to true to load demo data (sample dashboards, devices, tenants)
# Set to false for production deployment (clean installation)
LOAD_DEMO=true

# Domain Configuration (Required for HTTPS access)
# Replace with your actual domain name (e.g., iot.example.com or thingsboard.yourdomain.com)
DOMAIN_NAME=your-domain.com
